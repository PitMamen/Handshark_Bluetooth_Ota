<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <TextView
        android:text="@string/current_version"
        android:id="@+id/tv_currentversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_currentversion"
        android:layout_marginTop="30dp"
        android:background="#c6d2da" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.czp.library.ArcProgress
                    android:id="@+id/myProgress"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="139dp"
                    android:layout_height="139dp"
                    app:degree="0"
                    android:layout_centerInParent="true"
                    app:progressStyle="arc" />
                <Button

                    android:id="@+id/btn_updata"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="85dp"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_centerInParent="true"
                    android:background="#0000"
                    android:textColor="#ffff"
                  android:text="@string/update"
                   />

            </RelativeLayout>
<!--       android:layout_marginStart="10dp"-->
            <!--   android:layout_centerHorizontal="true"-->

            <TextView
                android:id="@+id/tv_CurrentPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_pro"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <TextView
                android:id="@+id/tv_new_serverion"
                android:textColor="#ffff"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_bestnew_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/the_best_verson"
                android:visibility="invisible"
                android:textColor="#ffff" />






        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>