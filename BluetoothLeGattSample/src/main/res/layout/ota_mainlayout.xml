<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/rg_content"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_content_update"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#e4e4e4"
            android:button="@null"
            android:drawablePadding="-35dp"
            android:drawableTop="@drawable/up_n"
            android:gravity="center"
            android:paddingTop="50dp"
            android:text="@string/update"
            android:textColor="#191c25" />

        <!--<com.example.android.bluetoothlegatt.KidView-->
            <!--android:layout_width="85dp"-->
            <!--android:layout_height="50dp" />-->

        <RadioButton
            android:id="@+id/rb_content_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#191c25"
            android:button="@null"
            android:drawablePadding="-30dp"
            android:drawableTop="@drawable/bt_p"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="@string/bluetooth"
            android:textColor="#e4e4e4" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>